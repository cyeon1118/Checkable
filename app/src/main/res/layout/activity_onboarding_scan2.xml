<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoarding_Scan2Page">

    <TextView
        android:id="@+id/text_scan1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/happiness_sans_bold"
        android:text="스캔 결과 화면 설명"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_scan2_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/happiness_sans_bold"
        android:gravity="center"
        android:lineSpacingExtra="10sp"
        android:padding="14sp"
        android:text="스캔한 생리대를 토대로\n앱은 월경 시작 여부를 판단하고,\n스캔 정확도와 함께\n감지된 혈의 색상을 안내합니다.\n\n결과화면은\n첫째, 월경이 시작되지 않은 경우,\n둘째, 정상적인 생리혈인\n붉은색, 갈색 혈이 감지된 경우,\n셋째, 자궁 질환이 의심되는\n자주색 혈, 검은색 혈이 감지된 경우,\n이렇게 3가지 중 하나로 나타납니다."
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout_scan2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_scan1_title" />

    <LinearLayout
        android:id="@+id/linearLayout_scan2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_scan2_previous"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/home_round_rectangle_shape"
            android:backgroundTint="#E3E3E3"
            android:fontFamily="@font/happiness_sans_bold"
            android:text="이전"
            android:textColor="#808080"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_scan2_next"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/home_round_rectangle_shape"
            android:backgroundTint="#E3E3E3"
            android:fontFamily="@font/happiness_sans_bold"
            android:text="다음"
            android:textColor="#808080"
            android:textSize="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>